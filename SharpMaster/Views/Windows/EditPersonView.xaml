<Window x:Class="SharpMaster.Views.Windows.EditPersonView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SharpMaster.ViewModels.Windows"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:EditPersonViewModel}"
        DataContext="{Binding Source={StaticResource DI}, Path=EditPersonViewModel}"
        Title="EditPersonView"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="{x:Null}"
        Height="500"
        Width="800">

    <Border Style="{DynamicResource MainBorder}"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="1.3*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            
            <Grid MinHeight="250" 
                  VerticalAlignment="Top">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="55"/>
                    <RowDefinition Height="55"/>
                    <RowDefinition Height="55"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>

                <Border Style="{DynamicResource ImageBorder}">
                    <Border.Background>
                        <ImageBrush ImageSource="{Binding PersonImage.Source}"
                                    Stretch="UniformToFill"/>
                    </Border.Background>
                </Border>

                <Button Grid.Row="3" 
                        Style="{DynamicResource CircleButton}"
                        Command="{Binding SelectImageCommand}">
                    <md:PackIcon Kind="Image"/>
                </Button>

                <TextBlock Text="Edit Peroson" 
                           Style="{DynamicResource Header}" 
                           Grid.ColumnSpan="3"
                           Grid.Column="0"/>

                <Border Style="{DynamicResource TextBoxBorder}"
                        Grid.Row="1" Grid.Column="1"
                        Margin="5 0">
                    <TextBox Tag="Name" Text="{Binding Person.Name}"/>
                </Border>

                <Border Style="{DynamicResource TextBoxBorder}"
                        Grid.Row="1" Grid.Column="2"
                        Margin="5,0">
                    <TextBox Tag="Lastname" Text="{Binding Person.Lastname}"/>
                </Border>

                <Border Style="{DynamicResource TextBoxBorder}"
                        Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"
                        Margin="120 0" >
                    <TextBox Tag="Email" Text="{Binding Person.Email}"/>
                </Border>


                <Border Style="{DynamicResource TextBoxBorder}"
                        Grid.Row="3" Grid.Column="1"
                        Margin="5 0">
                    <TextBox Tag="Phone number" Text="{Binding Person.PhoneNumber}"/>
                </Border>

                <ComboBox Grid.Row="3" Grid.Column="2"
                          Style="{DynamicResource ComboBoxStyle}"
                          ItemsSource="{Binding Builds}"
                          SelectedItem="{Binding SelectedBuildName}"
                          Margin="5,0" Height="40"/>

            </Grid>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Border Style="{DynamicResource TextBoxBorder}"
                        Height="150" 
                        Margin="5 0">
                    <TextBox Tag="Description"
                             TextWrapping="Wrap"
                             MaxHeight="150"
                             Text="{Binding Person.Description}"/>
                </Border>

                <Border Style="{DynamicResource TextBoxBorder}"
                        Height="150" 
                        Grid.Column="1"
                        Margin="5 0">
                    <TextBox Tag="Resume"
                             MaxHeight="150"
                             Text="{Binding Person.Resume}"
                             TextWrapping="Wrap"/>
                </Border>
            </Grid>

            <StackPanel Orientation="Horizontal"
                        FlowDirection="RightToLeft"
                        Grid.Row="2">
                <Button Style="{DynamicResource AddButton}"
                        Command="{Binding SaveCommad}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Border}}"
                        Margin="20,0">
                    <md:PackIcon Kind="CheckBold"/>
                </Button>
                <Button Style="{DynamicResource DeleteButton}"
                        Command="{Binding CloseWindowCommand}"
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Border}}">
                    <md:PackIcon Kind="Cancel"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
